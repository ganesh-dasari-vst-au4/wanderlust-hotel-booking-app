<link rel="stylesheet" href="stylestylehttps://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" href="./../public/style/admin.css">
<div class="container mt-2" id="adminprofile">
  <h5 class="pt-2">
    <p> Admin:</p> <b>{{user}}</b>
  </h5>
</div>
<hr>

<div class="accordion container" id="accordionExample">
  <div class="card">
    <div class="card-header" id="headingOne">
      <h2 class="mb-0">
        <button class="btn  btn-link" type="button" data-toggle="collapse" data-target="#collapseOne"
          aria-expanded="true" aria-controls="collapseOne">
          Complaints
        </button>
      </h2>
    </div>
    <div id="collapseOne" class="collapse show" aria-labelledby="headingOne" data-parent="#accordionExample">
      <div class="card-body">
        <div class="container pt-3 pb-3">

          {{!-- Complaints --}}



          <h5>Customer complaints:</h5>
          <hr>
          {{#each complain}}
          <div>
            <img
              src="https://images-eu.ssl-images-amazon.com/images/S/amazon-avatars-global/default._CR0,0,1024,1024_SX48_.png"
              class="mt-3"
              data-src="https://images-eu.ssl-images-amazon.com/images/S/amazon-avatars-global/default._CR0,0,1024,1024_SX48_.png"
              style="width: 40px;" style="height: 40px;">

            <p class="ml-2"><b>{{this.name}}</b></p><br>
            <p class="email">{{this.email}}</p>
          </div>
          <p>{{this.textArea}}</p>
          <hr>
          {{/each}}

        </div>
      </div>
    </div>
  </div>
  <div class="card">
    <div class="card-header" id="headingTwo">
      <h2 class="mb-0">
        <button class="btn btn-link collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo"
          aria-expanded="false" aria-controls="collapseTwo">
          Feedback
        </button>
      </h2>
    </div>
    <div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionExample">
      <div class="card-body">
        <div class="container pt-3 pb-3">

          {{!-- Feedback --}}

          <h5>Customer Feedback:</h5>
          <hr>
          {{#each feedback}}

          <div>
            <img
              src="https://images-eu.ssl-images-amazon.com/images/S/amazon-avatars-global/default._CR0,0,1024,1024_SX48_.png"
              class="mt-3"
              data-src="https://images-eu.ssl-images-amazon.com/images/S/amazon-avatars-global/default._CR0,0,1024,1024_SX48_.png"
              style="width: 40px;" style="height: 40px;">
            <p class="ml-2"><b>{{this.name}}</b></p><br>
            <p class="email">{{this.email}}</p>
          </div>
          <p>{{this.comment}}</p>
          <hr>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</div>