<body id="bbody">
  <link rel="stylesheet" href="./../public/style/complaint.css">
  <form action="/complaint" method="post" id="complaintForm">
    <div class="row mt-5"></div>
    <div class="container" id="div">
      <h4 id="h3head">Complaint Registration</h4>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-8">
          <input type="email" class="form-control" name="email" id="email" placeholder="Email" required>
          <p class="error" style=" color:red"></p>

        </div>
      </div>
      <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
          <p class="error" style=" color:red"></p>

        </div>
      </div>

      <div class="form-group">
        <label id="labl" class="col-sm-12 col-form-label">What was the problem you faced</label>
        <div class="col-sm-12">
          <textarea class="form-control" name="textArea" rows="5" id="complaint" required></textarea>
          <p class="error" style=" color:red"></p>

        </div>
      </div>

      <div class="form-group row">
        <div class="col-sm-10">
          <button type="submit" style="color: white;" class="btn" id="butn">Submit</button>
        </div>
      </div>
    </div>
  </form>

  {{!-- modal --}}
  <button id="complaintModal" type="button" class="btn btn-primary" data-toggle="modal" data-target="#complaintDone"
    style="margin-top: 50px;" hidden>
    Launch demo modal
  </button>
  <!-- Modal -->
  <div class="modal fade" id="complaintDone" tabindex="-1" role="dialog" aria-labelledby="complaintDoneLabel"
    ara-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content text-center">
        <div class="modal-header">
          <h5 class="modal-title" id="complaintDoneLabel">Message Status</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">

        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal"
            onclick="window.location.href = '/';">Close</button>
        </div>
      </div>
    </div>
  </div>
  {{!----}}

  <script type="text/javascript" src="./../public/script/complaintClient.js"></script>
</body>