<link rel="stylesheet" href="./../public/style/update.css">
<div class="container p-5 mt-5 pb-5" style="border:1px black solid; background:transparent; radius:3px">
    <h1 class="text-center">Update your profile</h1>
    <hr>
    <form action="/update" method="POST" class="mt-4">
        <div class="row form-group">
            <div class="col-md-6">
                <label>Name</label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Name" required>
            </div>
            <div class="col-md-6">
                <label>E-mail</label>
                <input type="text" class="form-control" name="email" id="email" placeholder="Email address" required>
            </div>
        </div>
        <div class="row form-group">
            <div class="col-md-6">
                <label>Phone</label>
                <input type="text" class="form-control" name="phoneNumber" id="phoneNumber" placeholder="Phone number"
                    minlength="10" required>
            </div>
            <div class="col-md-6">
                <label>Password</label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Password"
                    minlength="6" maxlength="8" required>
            </div>
        </div><br>
        <div class="text-center">
            <button type="submit" class="update">Update</button>
        </div>

    </form>
</div>